{
    "run_name": "PCam_VGG16_Ba128_Ep10_ce",
    "run_dir": "./output", 
    "wsi_dir": "./data/wsi",
    "tile_dir": "./data/tiles",
    "class_names": "normal,tumor", 
    "arch": {
        "type": "torchvision.models.vgg16",
        "args": {"weights":"torchvision.models.VGG16_Weights.DEFAULT"}
    },
    "data_loader": {
        "dataset_type": "tumor_utils.pcamv1.PCam",
        "args":{
            "data_dir": "./data/tiles",
            "train_subd": "train", 
            "val_subd": "val", 
            "test_subd": "test", 
            "batch_size": 128,
            "shuffle": true,
            "num_workers": 1
        }
    },
    "optimizer": {
        "type": "torch.optim.SGD",
        "args":{
            "lr": 0.0001,
            "momentum": 0.9
        }
    },
    "loss": "torch.nn.CrossEntropyLoss()",
    "metrics": [
        "accuracy", "loss"
    ],
    "lr_scheduler": {
        "type": "torch.optim.lr_scheduler.StepLR",
        "args": {
            "step_size": 20,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 10
    },
    "output": {
        "config_outfile": "final_config.json",
        "model_summary_file": "model.log",
        "final_model": "final_model.pt",
        "running_model": "running_model.pt",
        "train_logfile": "training.log",
        "stats_file": "stats.csv",
        "loss_plot": "plot_loss.png",
        "acc_plot": "plot_acc.png",
        "image_sample": "image_sample.jpg"
    },
    "notes": {}
}